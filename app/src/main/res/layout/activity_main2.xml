<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BA97E9"
    tools:context=".MainActivity2">

    <LinearLayout
        android:id="@+id/hline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="#29163C"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/homepage"
            android:layout_width="@dimen/_26sdp"
            android:layout_height="@dimen/_26sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:text="To do list"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp" />

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_165sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/dot"

            />


    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title/Subject"
        android:padding="@dimen/_5sdp"
        android:fontFamily="@font/baloo_2"
        android:textStyle="bold"
        android:textSize="@dimen/_17ssp"
        android:textColor="#F4F4F4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hline"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginLeft="@dimen/_16sdp"/>


    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:inputType="text"
        android:hint="title"
        android:gravity="center"
        android:textColor="#F4F1F1"
        android:background="@drawable/round_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView"
        android:layout_marginRight="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_20sdp"

        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:padding="@dimen/_5sdp"
        android:fontFamily="@font/baloo_2"
        android:textStyle="bold"
        android:textSize="@dimen/_17ssp"
        android:textColor="#F4F4F4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginLeft="@dimen/_16sdp"/>


    <EditText
        android:id="@+id/ds"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:inputType="text"
        android:hint="description"
        android:gravity="center"
        android:textColor="#F4F1F1"
        android:background="@drawable/round_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        android:layout_marginRight="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_20sdp"

        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:padding="@dimen/_5sdp"
        android:fontFamily="@font/baloo_2"
        android:textStyle="bold"
        android:textSize="@dimen/_17ssp"
        android:textColor="#F4F4F4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ds"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginLeft="@dimen/_16sdp"/>


    <EditText
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:inputType="date"
        android:hint="date"
        android:gravity="center"
        android:textColor="#F4F1F1"
        android:background="@drawable/round_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        android:layout_marginRight="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_20sdp"

        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:elevation="@dimen/_5sdp"
        android:backgroundTint="#333E7C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date"
        android:layout_marginTop="@dimen/_50sdp"
        app:cornerRadius="@dimen/_7sdp"
        />






</androidx.constraintlayout.widget.ConstraintLayout>